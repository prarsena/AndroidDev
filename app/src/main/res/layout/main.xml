<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9475A1"
    android:orientation="vertical">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:format12Hour="EEE MMM dd h:mm:ss aa zzz yyyy"
        android:textColor="#ff0000ff"
        android:timeZone="EST" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tip"
        android:textColor="#FF00FF00"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checkAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="Check Amount"
            android:background="#55ee44"
            android:textColor="#ffee11EE"/>

        <EditText
            android:id="@+id/mealprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="text">
            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="No. of People"
            android:textColor="#FFFF0000"
            android:background="#11ffee"/>
        <EditText
            android:id="@+id/dinersAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="text">
            <requestFocus />
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tipPercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="Tip Percentage"
            android:textColor="#FFFFFFFF"
            android:background="#dd2366"/>
        <EditText
            android:id="@+id/tipPercentageAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:inputType="text">
            <requestFocus />
        </EditText>
    </LinearLayout>
    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:textColor="#FFFF0000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Total Bill"
            android:textColor="#FFFFFFFF"
            android:background="#dd2366"/>

        <TextView
            android:id="@+id/totalBillAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text=""
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/totalPerPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Total Per Person"
            android:textColor="#FFFFFFFF"
            android:background="#dd2366"/>

        <TextView
            android:id="@+id/totalPerPersonAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text=""
            android:textColor="#FFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Total Tip"
            android:textColor="#FFFFFFFF"
            android:background="#dd2366"/>

        <TextView
            android:id="@+id/totalTipAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text=""
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/tipPerPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Tip Per Person"
            android:textColor="#FFFFFFFF"
            android:background="#dd2366"/>

        <TextView
            android:id="@+id/tipPerPersonAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text=""
            android:textColor="#FFF"/>
    </LinearLayout>

</LinearLayout>